{
  "name": "youtube-downloader-web",
  "version": "1.0.0",
  "private": true,
  "description": "YouTube Video Downloader Application",
  "main": "src/main.cjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "react-start": "vite",
    "react-build": "vite build",
    "build": "vite build && electron-builder build --win --mac --linux",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps && pip install -r python/requirements.txt"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "axios": "^1.8.3",
    "classnames": "^2.3.2",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.9.5",
    "vite": "^4.4.5"
  },
  "build": {
    "appId": "com.yourdomain.youtube-downloader",
    "productName": "YouTube Video Downloader",
    "extraResources": [
      {
        "from": "python/",
        "to": "python/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "python/",
        "to": "python/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/favicon.ico"
    }
  }
}